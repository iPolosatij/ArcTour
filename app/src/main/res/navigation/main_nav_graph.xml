<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="space.dlsunity.arctour.presenter.screens.start_screens.StartFragment"
        android:label="StartFragment"
        tools:layout="@layout/start_fragment">

        <action
            android:id="@+id/toWelcomeFrag"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/toMain"
            app:destination="@id/mainContainerFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true"/>


    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="space.dlsunity.arctour.presenter.screens.start_screens.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/welcome_fragment">

        <argument
            android:name="logout"
            app:argType="boolean"
            android:defaultValue="false" />

        <action
            android:id="@+id/toMain"
            app:destination="@id/mainContainerFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true"/>

    </fragment>

    <fragment
        android:id="@+id/mainContainerFragment"
        android:name="space.dlsunity.arctour.presenter.screens.main_screen.MainContainerFragment"
        android:label="MainContainer"
        tools:layout="@layout/main_container_fragment">

        <action
            android:id="@+id/log_out"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/startFragment"
            app:popUpToInclusive="true"/>
    </fragment>
</navigation>